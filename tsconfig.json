{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@ui/*": ["ui/*"],
      "@infra/*": ["infra/*"],
      "@context/*": ["context/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": ["node", "react"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
